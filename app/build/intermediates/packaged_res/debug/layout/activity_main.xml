<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2A2A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_difficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/ib_new_game"
        app:layout_constraintEnd_toEndOf="@+id/ib_new_game"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="@+id/ib_new_game" />

    <ImageView
        android:id="@+id/ib_new_game"
        android:layout_width="270dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bt_new_game1" />

    <ImageView
        android:id="@+id/ib_conf"
        android:layout_width="50dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/ib_new_game"
        app:layout_constraintEnd_toStartOf="@+id/ib_new_game"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ib_new_game"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/conf" />

    <TextView
        android:id="@+id/tv_gasto_de_oxigenio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_difficult"
        app:layout_constraintEnd_toEndOf="@+id/tv_difficult"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_difficult" />

    <TextView
        android:id="@+id/tv_quantidade_bombas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_gasto_de_oxigenio"
        app:layout_constraintEnd_toEndOf="@+id/tv_gasto_de_oxigenio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_gasto_de_oxigenio" />
</androidx.constraintlayout.widget.ConstraintLayout>